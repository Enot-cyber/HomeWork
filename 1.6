def triper(l):
    P = 0
    for i in range(0, len(l) - 2):
        for j in range(i + 1, len(l) - 1):
            for z in range(j + 1, len(l)):
                if l[i] + l[j] > l[z] and l[i] + l[z] > l[j] and l[j] + l[z] > l[i]:
                    if l[i] + l[j] + l[z] > P:
                        P = l[i] + l[j] + l[z]
    if P == 0:
        return "No such triangle"
    else:
        return P
    
